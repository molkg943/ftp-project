<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('a[href^="#"]').on('click', function (event) {
            event.preventDefault();
    
            const target = $(this.getAttribute('href'));
    
            if (target.length) {
                $('html, body').stop().animate({
                    scrollTop: target.offset().top
                }, 500);
    
                target.addClass('highlighted');
                setTimeout(function () {
                    target.removeClass('highlighted');
                }, 1500);
            }
        });
    
        // Skript für das Menü
        $('#menuToggle').on('click', function (event) {
            event.stopPropagation(); // Verhindert, dass das document click-Event sofort ausgelöst wird
    
            const menu = $('#menu');
            if (menu.css('display') === 'none') {
                menu.css('display', 'block'); // Zeigen des Menüs
                setTimeout(() => menu.css('left', '0'), 50); // Öffnen des Menüs mit einer kleinen Verzögerung, damit die Animation funktioniert
            } else {
                menu.css('left', '-330px');
                setTimeout(() => menu.css('display', 'none'), 300); // Verstecken des Menüs nach der Animation
            }
        });
    
        // Wenn außerhalb des Menüs geklickt wird, schließen des Menüs
        $(document).on('click', function (event) {
            const menu = $('#menu');
            if (!$(event.target).closest('#menu, #menuToggle').length && menu.css('left') === '0px') {
                menu.css('left', '-330px');
                setTimeout(() => menu.css('display', 'none'), 300); // Verstecken des Menüs nach der Animation
            }
        });
    
        // Schließen des Menüs, wenn ein Link im Inhaltsverzeichnis angeklickt wird
        $('#menu a').on('click', function() {
            const menu = $('#menu');
            menu.css('left', '-330px');
            setTimeout(() => menu.css('display', 'none'), 300); // Verstecken des Menüs nach der Animation
        });
    });

    
    const timeline = document.querySelector('#timeline .events');
        let currentIndex = 0;

        window.addEventListener('keydown', (e) => {
            if (e.key === 's' || e.key === 'S') {
                currentIndex++;

                if (currentIndex >= timeline.children.length) {
                    currentIndex = 0; // Zurück zum Anfang, wenn das Ende erreicht ist
                }
            } else if (e.key === 'w' || e.key === 'W') {
                currentIndex--;

                if (currentIndex < 0) {
                    currentIndex = timeline.children.length - 1; // Zum Ende, wenn der Anfang erreicht ist
                }
            }

            const yOffset = -currentIndex * 170; // 200px ist die Höhe eines Ereignisses und 100px ist die Hälfte des Containers
            timeline.style.transform = `translateY(${yOffset}px)`;
        });
</script>

